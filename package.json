    "main": "./public/index.html",
    "devDependencies": {
        "firebase-tools": "latest",
        "parcel-bundler": "latest",
        "prettier": "latest",
        "typescript": "3.8.3"
    },
    "dependencies": {
        "@babel/polyfill": "7.8.7",
        "@types/react": "16.9.34",
        "@types/react-dom": "16.9.6",
        "axios": "0.19.2",
        "emotion": "10.0.27",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "react-markdown": "4.3.1",
        "yaml": "1.9.2"
    },
    "scripts": {
        "format": "shopt -s extglob globstar && prettier --config ./.prettierrc.json -c --write ./src/**/*.js* && shopt -u extglob globstar",
        "build": "parcel build --no-cache --no-source-maps --public-url './' -d ./docs -- \"$npm_package_main\" # github actions requires local path ./ instead of root path /",
        "start:dev": "{ [ \"$PORT\" ] || PORT=1234; } && parcel serve --no-cache -d ./dist/ -p \"$PORT\" -- \"$npm_package_main\"",
        "firebase-login": "firebase login --reauth",
        "firebase-init": "firebase init",
        "firebase-deploy": "firebase login && firebase deploy"
    }
}
